<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Section Réglages audio -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Réglages audio"
            android:textColor="@color/github_accent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:background="@color/surface"
            android:padding="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sensibilité du microphone"
                android:textColor="@color/text"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/microphone_sensitivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:progress="75"
                android:max="100"
                android:progressTint="@color/accent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volume de sortie TTS"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <SeekBar
                android:id="@+id/tts_volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:progress="80"
                android:max="100"
                android:progressTint="@color/accent" />

            <Switch
                android:id="@+id/stereo_audio_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Audio stéréo (accessibilité)"
                android:textColor="@color/text"
                android:checked="false"
                android:layout_marginTop="16dp"
                android:thumbTint="@color/accent"
                android:trackTint="@color/border" />

            <Switch
                android:id="@+id/haptic_feedback_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feedback haptique"
                android:textColor="@color/text"
                android:checked="true"
                android:layout_marginTop="12dp"
                android:thumbTint="@color/accent"
                android:trackTint="@color/border" />

        </LinearLayout>

        <!-- Section Sécurité -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sécurité et confirmation"
            android:textColor="@color/github_accent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:background="@color/surface"
            android:padding="16dp"
            android:elevation="2dp">

            <Switch
                android:id="@+id/voice_confirmation_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmation vocale des actions"
                android:textColor="@color/text"
                android:checked="true"
                android:thumbTint="@color/accent"
                android:trackTint="@color/border" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Délai de confirmation (secondes)"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <SeekBar
                android:id="@+id/confirmation_delay_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:progress="3"
                android:max="10"
                android:progressTint="@color/accent" />

            <TextView
                android:id="@+id/delay_value_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 secondes"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textAlignment="center" />

        </LinearLayout>

        <!-- Section Commandes système -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Commandes système"
            android:textColor="@color/github_accent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/surface"
            android:padding="16dp"
            android:elevation="2dp">

            <Switch
                android:id="@+id/volume_control_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contrôle du volume"
                android:textColor="@color/text"
                android:checked="true"
                android:thumbTint="@color/accent"
                android:trackTint="@color/border" />

            <Switch
                android:id="@+id/wifi_control_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contrôle Wi-Fi"
                android:textColor="@color/text"
                android:checked="true"
                android:layout_marginTop="12dp"
                android:thumbTint="@color/accent"
                android:trackTint="@color/border" />

            <Switch
                android:id="@+id/navigation_control_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Navigation système"
                android:textColor="@color/text"
                android:checked="true"
                android:layout_marginTop="12dp"
                android:thumbTint="@color/accent"
                android:trackTint="@color/border" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
