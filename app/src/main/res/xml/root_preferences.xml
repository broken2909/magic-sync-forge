<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Catégorie: Paramètres généraux -->
    <PreferenceCategory
        android:title="Paramètres généraux"
        app:iconSpaceReserved="false">

        <!-- Mot clé d'activation - OPTION SIMPLE POUR TEST -->
        <EditTextPreference
            android:key="activation_keyword"
            android:title="Mot clé d'activation"
            android:summary="Mot pour activer les commandes vocales"
            android:defaultValue="magic"
            android:dialogTitle="Entrez le mot clé"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>
